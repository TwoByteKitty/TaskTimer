<form>
    <div class="grid-container">
        <div class="grid-x grid-padding-x">
            <div class="cell small-3">
                <label for="name" class="text-right middle">Your Name </label>
            </div>
            <div class="cell-small-9">
                <input type="text" id="name" placeholder="Jane Doe">
            </div>
            <div class="cell small-3">
                <label for="email" class="text-right middle">Email</label>
            </div>
            <div class="cell-small-9">
                <input type="email" id="email" placeholder="email@example.com">
            </div>
            <div class="cell small-3">
                <label for="confirmEmail" class="text-right middle">Confirm Email</label>
            </div>
            <div class="cell-small-9">
                <input type="email" id="confirmEmail" placeholder="email@example.com">
            </div>
            <div class="cell small-3">
                <label for="password" class="text-right middle">Password </label>
            </div>
            <div class="cell-small-9">
                <input type="password" id="password" placeholder="">
            </div>
            <div class="cell small-3">
                <label for="confirmPassword" class="text-right middle">Confirm Password</label>
            </div>
            <div class="cell-small-9">
                <input type="password" id="confirmPassword" placeholder="">
            </div>
        </div>
        <button class="button large expanded" type="submit">Submit</button>
    </div>
</form>