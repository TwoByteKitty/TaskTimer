<div class="grid-x">
    <div class="cell">
        <div class="input-group">
            <span class="input-group-label">Title</span>
            <input class="input-group-field" type="text">
        </div>
    </div>
    <div class="cell">
        <div class="input-group">
            <span class="input-group-label">Description</span>
            <input class="input-group-field" type="text">
        </div>
    </div>
    <div class="cell">
        <fieldset class="fieldset">
            <legend>Choose a Priority Level</legend>
            <input id="priorityLvlVyLow" type="radio"><label for="priorityLvlVyLow">Very Low</label>
            <input id="priorityLvlLow" type="radio"><label for="priorityLvlLow">Low</label>
            <input id="priorityLvlMed" type="radio"><label for="priorityLvlMed">Medium</label>
            <input id="priorityLvlHigh" type="radio"><label for="priorityLvlHigh">High</label>
            <input id="priorityLvlUrg" type="radio"><label for="priorityLvlUrg">Urgent</label>
        </fieldset>
    </div>
    <div class="cell">
        <button class="button">Create</button>
    </div>
</div>