<div class="grid-x">

    <div class="cell">
        <div class="grid-container">
            <div class="grid-x grid-margin-x grid-padding-y align-center-middle text-center">
                <div class="cell small-12">
                    <div class="switch large">
                        <input class="switch-input" id="workOrRest" type="checkbox" name="workRestSwitch">
                        <label class="switch-paddle" for="workOrRest">
                            <span class="show-for-sr">Select work with active or rest with inactive</span>
                            <span class="switch-active" aria-hidden="true">Work</span>
                            <span class="switch-inactive" aria-hidden="true">Rest</span>
                        </label>
                    </div>
                </div>
                <div class="cell small-12">
                    work timer
                    {{> timer }}
                </div>
                <div class="cell small-12">
                    rest timer
                </div>
                <div class="cell small-12">
                    <div class="large expanded button-group">
                        <button type="button" class="alert button large" data-tooltip tabindex="1"
                            title="Click here to complete a task!" data-position="top"
                            data-alignment="left"><i class="fas fa-check-square"></i></button>
                        <button type="button" class="success button large" data-tooltip tabindex="1"
                            title="Starts the highlighted timer." data-position="bottom"
                            data-alignment="left"><i class="fas fa-play-circle"></i></button>
                        <button type="button" class="warning button large" data-tooltip tabindex="1"
                            title="Pause your timer in the event of interuptions." data-position="bottom"
                            data-alignment="right"><i class="fas fa-pause-circle"></i></button>
                        <button type="button" class="button large" data-tooltip tabindex="1"
                            title="This button allows you to record your time and switch to a different task."
                            data-position="top" data-alignment="right"><i class="fas fa-exchange-alt"></i></button>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="cell">
        <div class="grid-container">
            <div class="grid-x container-full">
                <div class="cell small-12">
                    <div class="card" style="width: 100%;">
                        <div class="card-section">
                            <h4 class="text-center">Current Task:</h4>
                        </div>
                        <div class="card-divider text-center">
                            <h5 style="text-align: center; width: 100%;">Pet Fuzzy Kitties</h5>
                        </div>
                    </div>
                </div>
                <div class="cell small-12">
                    pending tasks
                </div>
                <div class="cell">
                    <!-- link/button to different page? just a section of this pg? searchable?-->
                    completed tasks
                </div>
            </div>

        </div>
    </div>

</div>