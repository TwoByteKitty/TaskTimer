<div class="grid-x container-full align-center-middle text-center">
    <div class="cell small-12">
        <div class="card" style="width: 100%;">
            <div class="card-section">
                <h4 class="text-center">Current Task:</h4>
            </div>
            <div class="card-divider text-center">
                <h5 id="activeTitleDisp" style="text-align: center; width: 100%;">{{activeTitle}}</h5>
            </div>
        </div>
    </div>

    <div class="cell small-12">
        <hr>
        <div class="grid-x container-full align-center-middle text-center">
            <div class="cell small-12">
                <h2>Pending Tasks</h2>
                {{@exphbs.view}}
            </div>
            <div class="cell tasksBtnsCell">
                {{#if (equals @exphbs.view "home")}}
                <a href="/tasks" class="button large">Task Management</a>
                {{else}}
                <a href="/" class="button large">Timer Dashboard</a>
                {{/if}}
                <a href="/tasks/create" class="button large">Create Tasks</a>
            </div>
            {{!-- <div class="grid-x container-full align-center-middle"> --}}
            {{#each tasks}}
            <div id="{{_id}}" class="cell small-12">
                <div class="card {{ priorityLvl }}" style="width: 100%;">
                    <div class="card-divider">
                        <h5 class="text-center"> {{ title }} </h5>
                    </div>
                    <div class="card-section">
                        <p> {{ dateCreated }} </p>
                    </div>
                    <div class="card-section">
                        <p> {{ description }} </p>
                    </div>
                    <div class="card-section">
                        <div>
                            {{#if (equals @exphbs.view "home")}}
                            <button class="button large markActiveBtn" type="button" {{#if active}} disabled {{/if}} data-task-id="{{_id}}">Set As
                                Active</button>
                            <button class="button large markComplBtn" type="button" data-task-id="{{_id}}">Mark
                                Complete</button>
                            {{else}}
                            <a href="/tasks/{{_id}}" class="button large">Edit</a>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
            {{!-- </div> --}}
        </div>
    </div>

</div>