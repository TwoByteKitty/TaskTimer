{{ json this }}
<div class="grid-x container-full align-center-middle text-center" id="currentTaskGrid">
    <div class="cell small-12">
        <div class="card" style="width: 100%;">
            <div class="card-section">
                <h4 class="text-center">Current Task:</h4>
            </div>
            <div class="card-divider text-center">
                <h5 style="text-align: center; width: 100%;">Pet Fuzzy Kitties</h5>
            </div>
        </div>
    </div>

    <div class="cell small-12">
        <hr>
        <div class="grid-x container-full align-center-middle text-center" id="pendingTasksGrid">
            <div class="cell small-12">
                <h2>Pending Tasks</h2>
                {{@exphbs.view}}
            </div>
            <div class="cell tasksBtnsCell">
                {{#if (equals @exphbs.view "home")}}
                <a href="/tasks" class="button large">Task Management</a>
                {{else}}
                <a href="/" class="button large">Timer Dashboard</a>
                {{/if}}
                <a href="/tasks/create" class="button large">Create Tasks</a>
            </div>
            <div class="grid-x container-full align-center-middle" id="tasksContainer">
                {{#each this}}
                <div class="cell small-12">
                    <div class="card {{ priorityLvl }}" style="width: 100%;">
                        <div class="card-divider">
                            <h5 class="text-center" id="taskTitle"> {{ title }} </h5>
                        </div>
                        <div class="card-section">
                            <p id="taskStartDate"> {{ dateCreated }} </p>
                        </div>
                        <div class="card-section">
                            <p id="taskDesc"> {{ description }} </p>
                        </div>
                        <div class="card-section">
                            {{#if (equals @exphbs.view "home")}}
                            <button class="button large" id="setTaskActive" type="button">Set As Active</button>
                            <button class="button large" id="markTaskCompl" type="button">Mark Complete</button>
                            {{else}}
                            <a href="/tasks/{{_id}}" class="button large" id="editTask">Edit</a>
                            {{/if}}
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
