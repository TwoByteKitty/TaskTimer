<div class="grid-x timerGrid align-center-middle">
  {{!-- Settings Update Success Msg --}}
  <div class="cell small-8 hide saveSuccessMsg">
    <div class="callout success" data-closable>
      <h5>Save Successful!</h5>
      <p>Your new settings were saved successfully!</p>
      <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>

  {{!-- Modals --}}
  {{!-- Timer Settings Modal --}}
  <div class="reveal" id="timerModal" data-reveal data-overlay="false">
    <div class="grid-x align-center-middle text-center">
      <div class="cell">
        <h4>Would you like to reset your timer now?</h4>
      </div>
      <div class="cell">
        <p class="lead">You currently have a timer in progress. </p>
      </div>
      <div class="cell">
        <p>Would you like to reset the timer with your new settings, or continue running your current timer?</p>
      </div>
      <div class="cell">
        <div class="grid-x align-justify align-middle">
          <div class="cell small-5">
            <button class="button" id="yesResetTimer">YES, reset the timer with my new settings.</button>
          </div>
          <div class="cell small-5">
            <button class="button" id="noResetTimer">NO, I want to keep my current timer.</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{!-- Work Alarm Modal --}}
  <div class="reveal" id="workAlarmModal" data-reveal data-overlay="false">
    <div class="grid-x align-center-middle text-center" >
      <div class="cell">
        <h4>Good Work! Your timer is done.</h4>
      </div>
      <div class="cell">
        <p class="lead">You can take a break now! </p>
      </div>
      <div class="cell">
        <p>Would you like to start resting? You can reset the work timer to start a new working period instead.</p>
      </div>
      <div class="cell">
        <div class="grid-x align-justify align-middle">
          <div class="cell small-5">
            <button class="button" id="beginRest">YES, kill the alarm and start resting now.</button>
          </div>
          <div class="cell small-5">
            <button class="button" id="killWorkAlarm">NO, kill the alarm and reset. I want to keep working.</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  {{!-- Rest Alarm Modal --}}
   <div class="reveal" id="restAlarmModal" data-reveal data-overlay="false">
    <div class="grid-x align-center-middle text-center" >
      <div class="cell">
        <h4>Welcome Back! Your rest time is over.</h4>
      </div>
      <div class="cell">
        <p class="lead">Let's finish these tasks! </p>
      </div>
      <div class="cell">
        <p>Would you like to start working? </p>
      </div>
      <div class="cell">
        <div class="grid-x align-justify align-middle">
          <div class="cell small-5">
            <button class="button" id="beginWork">YES, kill the alarm and start working now.</button>
          </div>
          <div class="cell small-5">
            <button class="button" id="killRestAlarm">NO, kill the alarm. I'm not ready to start working yet. </button>
          </div>
        </div>
      </div>
    </div>
  </div>


  {{!-- Toggle --}}
  <div class="cell small-12 flex-container align-center-middle">
    <div class="flex-child-shrink switchWrap">
      <div class="switch large">
        <input class="switch-input" id="workOrRest" type="checkbox" name="workRestSwitch" checked>
        <label class="switch-paddle" for="workOrRest">
          <span class="show-for-sr">Select work with active or rest with inactive</span>
          <span class="switch-active" aria-hidden="true" id="switchWork">Work</span>
          <span class="switch-inactive" aria-hidden="true" id="switchRest">Rest</span>
        </label>
      </div>
    </div>
  </div>

  {{!-- Audio Element for Alarm --}}
  <div class="cell">
    <audio controls src="{{ audioPath user.settings.alarm }}" id="alarmEl" loop></audio>
  </div>

  {{!-- Timer --}}
  <div class="cell small-12" id="timerCell">
    <div class="timer-group">
      <svg width="400" viewBox="0 0 400 350" xmlns="http://www.w3.org/2000/svg">
        <g transform="translate(150,150)">
          <circle r="135" class="timerWrap" />
          <circle r="110" class="face minutes" />
          <circle r="100" class="face seconds" />
          <g transform="rotate(-90)">
            <circle r="110" class="hand minutes" />
          </g>
          <g transform="rotate(-90)">
            <circle r="100" class="hand seconds" />
          </g>
        </g>
      </svg>
      <div class="timerDisplay">
        <div class="display-remain-time">00:30</div>
      </div>
    </div>
  </div>

  {{!-- Controls --}}
  <div class="cell small-12">
    <div class="grid-x align-center-middle">
      <div class="cell small-12 flex-container align-center-middle">
        <div class="large button-group align-center flex-child-shrink timerCtrlWrap">
          <button type="button" class="alert button large timerCtrl" id="resetTimerBtn" data-tooltip tabindex="1"
            title="Click here to clear and reset the timer." data-position="top" data-alignment="left" disabled><i
              class="fas fa-undo fa-2x"></i></button>
          <button type="button" class="success button large timerCtrl" id="startTimerBtn" data-tooltip tabindex="1"
            title="Starts the timer." data-position="bottom" data-alignment="left"><i
              class="fas fa-play fa-2x"></i></button>
          <button type="button" class="primary button large timerCtrl" id="pauseTimerBtn" data-tooltip tabindex="1"
            title="Pause your timer in the event of interuptions." data-position="bottom" data-alignment="right"
            disabled><i class="fas fa-pause fa-2x"></i></button>
        </div>
      </div>
    </div>
  </div>

</div>