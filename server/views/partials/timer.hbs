{{!-- Toggle --}}
<div class="grid-x">
  <div class="cell small-12 flex-container align-center-middle">
    <div class="switchWrap flex-child-shrink">
      <div class="switch large">
        <input class="switch-input" id="workOrRest" type="checkbox" name="workRestSwitch" checked>
        <label class="switch-paddle" for="workOrRest">
          <span class="show-for-sr">Select work with active or rest with inactive</span>
          <span class="switch-active" aria-hidden="true" id="switchWork">Work</span>
          <span class="switch-inactive" aria-hidden="true" id="switchRest">Rest</span>
        </label>
      </div>
    </div>
  </div>

  {{!-- Timer --}}
  <div class="cell small-12" id="timerCell">
    <div class="container timer-group">
      <div class="circle">
        <svg width="400" viewBox="0 0 400 350" xmlns="http://www.w3.org/2000/svg">
          <g transform="translate(150,150)">
             <circle r="135" class="timerWrap" />
            <circle r="110" class="e-c-base face minutes" />
            <circle r="100" class="e-c-base face seconds" />
            <g transform="rotate(-90)">
              <circle r="110" class="e-c-progress hand minutes" />
            </g>
            <g transform="rotate(-90)">
              <circle r="100" class="e-c-progress hand seconds" />
            </g>
          </g>
        </svg> </div>
      <div class="controlls">
        <div class="display-remain-time">00:30</div>
      </div>
    </div>
  </div>

  {{!-- Controls --}}
  <div class="cell small-12">
    <div class="grid-x align-center-middle">
      <div class="cell small-12 flex-container align-center-middle">
        <div class="large button-group align-center timerCtrlWrap flex-child-shrink">
          <button type="button" class="alert button large timerCtrl" id="resetTimerBtn" data-tooltip tabindex="1"
            title="Click here to clear and reset the timer." data-position="top" data-alignment="left" disabled><i
              class="fas fa-undo fa-2x"></i></button>
          <button type="button" class="success button large timerCtrl" id="startTimerBtn" data-tooltip tabindex="1"
            title="Starts the timer." data-position="bottom" data-alignment="left"><i
              class="fas fa-play fa-2x"></i></button>
          <button type="button" class="primary button large timerCtrl" id="pauseTimerBtn" data-tooltip tabindex="1"
            title="Pause your timer in the event of interuptions." data-position="bottom" data-alignment="right"
            disabled><i class="fas fa-pause fa-2x"></i></button>
        </div>
      </div>
    </div>
  </div>

</div>