<div class="grid-x">

    <div class="cell">
        <div class="grid-container">
            <div class="grid-x grid-margin-x grid-padding-y align-center-middle text-center">
                <div class="cell small-12">
                    {{> timer }}
                </div>
                <div class="cell small-12">
                    <p class="h6 motMsg">Get it done!</p>
                </div>
            </div>
        </div>
    </div>

    <div class="cell">
        <div class="grid-x align-center-middle text-center currentTaskGrid">
            <div class="cell small-12">
                <div class="card currentTskCard">
                    <div class="card-section">
                        <h3 class="text-center currentTaskLabel">Current Task:</h3>
                    </div>
                    <div class="card-divider text-center currentTitle">
                        <h3 class="activeTitleDisp ">{{taskData.activeTitle}}</h3>
                    </div>
                </div>
            </div>
            {{> taskList taskData }}

        </div>
    </div>
</div>
<script type="text/javascript" src="/js/home-page.build.js"></script>