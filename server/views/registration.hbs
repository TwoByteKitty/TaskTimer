<form name="user" action="/user/register" method="POST" style="margin-top: 45px;">
    <div class="grid-container">
        <div class="grid-x grid-padding-x grid-margin-x text-left">

            <div class="cell small">
                <label for="name" class="middle">Your Name
                    <input name="name" type="text" id="name" placeholder="Jane Doe">
                </label>
            </div>

            <div class="cell">
                <label for="email" class="middle">Email
                    <input name="email" type="email" id="email" placeholder="email@example.com">
                </label>
            </div>

            <div class="cell">
                <label for="confirmEmail" class="middle">Confirm Email
                    <input name="confirmEmail" type="email" id="confirmEmail" placeholder="email@example.com">
                </label>
            </div>

            <div class="cell">
                <label for="password" class="middle">Password
                    <input name="password" type="password" id="password" placeholder="">
                </label>
            </div>

            <div class="cell">
                <label for="confirmPassword" class="middle">Confirm Password
                    <input name="confirmPassword" type="password" id="confirmPassword" placeholder="">
                </label>
            </div>

        </div>
        <button class="button large expanded" type="submit">Submit</button>
    </div>
</form>